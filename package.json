{
  "name": "planet-dao",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "npm run css:build && next build",
    "start": "next start",
    "lint": "next lint",
    "css:watch": "npx tailwindcss -i ./styles/globals.css -o ./public/output.css -w",
    "css:build": "npx tailwindcss -i ./styles/globals.css -o ./public/output.css",
    "deploy": "cd contracts && hardhat deploy --network moonbase",
    "deploy-unique": "cd contracts &&  hardhat run \"deploy/deploy-unique.js\" --network unique",
    "verify": "cd contracts && hardhat verify --network moonbase $(cat address.txt)",
    "deploy-verify": "npm run deploy && npm run verify"
  },
